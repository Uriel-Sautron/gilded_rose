{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "skipBlankLines": "off",
        "no-console": "off",
        "padded-blocks": 0,
        "no-trailing-spaces": 0,
        "no-unused-vars": 1,
        "react/prop-types": "off",
        "arrow-body-style": 1,
        "react/self-closing-comp": 1,
        "react/jsx-props-no-spreading": "off",
        "prettier/prettier": "error"
    }
}
